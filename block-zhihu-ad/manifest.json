{
  "name": "知乎广告屏蔽",
  "version": "0.2",
  "manifest_version": 2,
  "description": "屏蔽知乎feed流中的广告",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["index.js"]
  },
  "permissions": ["http://*.zhihu.com/", "https://*.zhihu.com/"],
  "browser_action": {
    "default_title": "",
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "background"
  ],
  "content_scripts": [{
    "matches": ["http://*.zhihu.com/", "https://*.zhihu.com/"],
    "js": ["content.js"]
  }]
}
